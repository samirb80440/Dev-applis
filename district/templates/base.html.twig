<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="shortcut icon" type="image/png" href="{{ asset ('images_the_district/the_district_brand/favicon.png')}}"/>
    <link rel="stylesheet"  href="{{ asset('app.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">
 
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
      {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
    </head>
      <header id="navbar">
        <nav class="navbar navbar-expand-lg  d-flex bg-danger navbar-dark">
            <a class="navbar-brand" href="{{ path ('app_index') }}"><img src="{{ asset ('images_the_district/the_district_brand/logo_transparent.png') }}"
                    width="50" class="d-inline-block align-text-top" alt="navicon"></a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center col-6" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="textnav nav-item px-5">
                       <a class="nav-link {{ app.current_route == 'app_index' ? 'active' : '' }}" href="{{ path('app_index') }}" title="Accueil">Accueil</a>
                    </li>
                    <li class="textnav nav-item px-5">
                        <a class="nav-link {{ app.current_route == 'app_category' ? 'active' : '' }}" href="{{ path('app_category') }}" title="Categorie">Categorie</a>
                    </li>
                    <li class="textnav nav-item px-5">
                     <a class="nav-link {{ app.current_route == 'app_plat' ? 'active' : '' }}" href="{{ path('app_plat') }}" title="Plat">Plats</a>
                    </li>
                    <li class="textnav nav-item px-5">
                         <a class="nav-link {{ app.current_route == 'app_contact' ? 'active' : '' }}" href="{{ path('app_contact') }}" title="Contact">Contact</a>
                    </li>
                                                  {% if app.user %}

                        <li class="nav-item px-5">
                            <a class="textnav nav-link {{ app.current_route == 'app_utilisateur' ? 'active' : ''}}" href="{{ path ('app_utilisateur', {nom: app.user.nom,prenom: app.user.prenom}) }}" title="contact">{{ app.user.nom }}</a>
                        </li>

                        <li class="nav-item px-5">
                            <a class="textnav nav-link {{ app.current_route == 'app_logout' ? 'active' : ''}}" href="{{ path ('app_logout') }}" title="contact">Deconnexion</a>
                        </li>

                        {% else %}

                        <li class="nav-item ms-md-5 px-5">
                            <a class="textnav nav-link {{ app.current_route == 'app_login' ? 'active' : ''}}" href="{{ path ('app_login') }}" title="contact">Connexion</a>
                        </li>

                        <li class="nav-item px-5">
                            <a class="textnav nav-link {{ app.current_route == 'app_register' ? 'active' : ''}}" href="{{ path ('app_register') }}" title="contact">Nouvelle utilisateur</a>
                        </li>

                        {% endif %}
                        <li class="nav-item px-5">
                            <a href="{{ path ("app_panier") }}" class="btn btn-danger">
                                <i class="bi bi-cart-fill"></i>
                            </a>
                        </li>
                </ul>
            </div>
        </nav>
      </header>
      <body>
       {% include 'partiales/flash.html.twig' %}
      {% block body %}{% endblock %}
 
 
   <footer>
  <!-- Navigation du pied de page -->
  <nav id="navbot"  class="navbar navbar-expand bg-danger nav-resp  mt-3 container d-flex rounded-pill  col-lg-12justify-content-center">
    <!-- Contenu de la navigation -->
    <div class="collapse navbar-collapse justify-content-center row" id="collapsibleNavbar2">
      <!-- Liste des éléments de navigation -->
      <ul class="navbar-nav d-flex flex-wrap  justify-content-center">
        <!-- Élément de navigation : Accueil -->
        <li class="nav-item px-5">
          <a class="nav-link active" href="https://www.facebook.com/?locale=fr_FR" title="facebook">
            <!-- Image de l'icône Facebook -->
            <img src="{{ asset ('images_the_district/icons8-facebook-50.png')}}" class="img-fluid align-text-top" alt="navfb">
          </a>
        </li>
        <!-- Élément de navigation : Catégorie -->
        <li class="nav-item px-5">
          <a class="nav-link" href="https://www.pinterest.fr/" title="pinterest">
            <!-- Image de l'icône Pinterest -->
            <img src="{{ asset ('images_the_district/icons8-pinterest-50.png')}}" class="img-fluid d-inline-block align-text-top" alt="navpin">
          </a>
        </li>
        <!-- Élément de navigation : Plat -->
        <li class="nav-item px-5">
          <a class="nav-link" href="https://www.snapchat.com/fr-FR" title="snapchat">
            <!-- Image de l'icône Snapchat -->
            <img src="{{ asset ('images_the_district/icons8-snapchat-circled-logo-50.png')}}" class="img-fluid d-inline-block align-text-top" alt="navsnap">
          </a>
        </li>
        <!-- Élément de navigation : Contact -->
        <li class="nav-item px-5">
          <a class="nav-link" href="https://x.com/?lang=fr" title="twitter=X">
            <!-- Image de l'icône Twitter -->
            <img src="{{ asset ('images_the_district/icons8-twitter-50.png')}}" class="img-fluid d-inline-block align-text-top" alt="navtwi">
          </a>
        </li>
        <!-- Élément de navigation : Contact -->
        <li class="nav-item px-5">
          <a class="nav-link" href="https://www.instagram.com/" title="instagram">
            <!-- Image de l'icône Instagram -->
            <img src="{{ asset ('images_the_district/icons8-instagram-50.png')}}" class="img-fluid d-inline-block align-text-top" alt="navinta">
          </a>
        </li>
        <li class="nav-item px-5">
           <a class="nav-link" href="{{ path ('app_mention_legale') }}" title="mention_legales"><img src="{{ asset ('images_the_district/icons8-légal-50.png')}}" class="img-fluid d-inline-block align-text-top" alt="navyt"></a>
          </li>
          <li class="nav-item px-5">
            <a class="nav-link" href="{{ path ('app_pdf') }}" title="politique_de_confidentialité"><img src="{{ asset ('images_the_district/icons8-politique-de-confidentialité-50.png')}}" class="img-fluid d-inline-block align-text-top" alt="navyt"></a>
      </ul>
     
    </div>
  </nav>
</footer>
 </div>
